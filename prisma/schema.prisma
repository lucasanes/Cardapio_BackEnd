// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recovery {
  id String @id @default(uuid())

  code String

  created_at String

  userEmail String
  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)

  @@map("recoveries")
}

model User {
  id String @id @default(uuid())

  username String @unique
  email    String @unique
  senha    String

  created_at String

  restaurantes Restaurante[]
  recoveries   Recovery[]

  @@map("users")
}

model Restaurante {
  id String @id @default(uuid())

  nome   String @unique
  imagem String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categorias Categoria[]

  @@map("restaurantes")
}

model Categoria {
  id String @id @default(uuid())

  nome   String
  imagem String

  created_at String

  restauranteId String
  restaurante   Restaurante @relation(fields: [restauranteId], references: [id], onDelete: Cascade)

  produtos Produto[]

  @@map("categorias")
}

model Produto {
  id String @id @default(uuid())

  code      Int
  ativado   Boolean
  nome      String
  nomesAdd  String[]
  descricao String
  preco     Float
  precosAdd Float[]
  imagem    String

  created_at String

  categoriaId String
  categoria   Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@map("produtos")
}
